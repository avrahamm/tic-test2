<div class="board">
    <table border>
        {% for row in grid %}
            <tr>
                {% for cell in row %}
                    <td width="50px" height="50px"><center>&nbsp;
                            <span class="{{ cell.val~" "~cell.status }}">{{ cell.val }}&nbsp; </span>
                        </center></td>
                {% endfor %}
            </tr>
        {% endfor %}
    </table>
</div>
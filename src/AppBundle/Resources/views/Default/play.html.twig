        {% for msg in messages %}
            <div class="message">{{ msg }}</div>
        {% endfor %}
    </div>

    {% include 'AppBundle:Board:board.html.twig' with grid %}
    {% include 'AppBundle:Board:currentPlayer.html.twig' with grid %}
    {{ include('AppBundle:Board:controls.html.twig', { 'size': size }) }}
    {{ include('AppBundle:Board:buttons.html.twig') }}
    {{ include('AppBundle:Board:nextMove.html.twig') }}

{% endblock body %}

{% block javascripts %}
    {{ parent() }}
